<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.quizz.signup"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1.85"
        android:background="@drawable/blue"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="58dp">

        <EditText
            android:id="@+id/s_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="UNAME"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="38dp" />

        <EditText
            android:id="@+id/s_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/s_uname"
            android:layout_alignStart="@+id/s_uname"
            android:layout_below="@+id/s_uname"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="EMAIL ID"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="111dp" />

        <EditText
            android:id="@+id/s_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/s_mail"
            android:layout_alignStart="@+id/s_mail"
            android:layout_below="@+id/s_mail"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="185dp" />

        <RadioGroup
            android:id="@+id/s_rg"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignEnd="@+id/s_pass"
            android:layout_alignLeft="@+id/s_pass"
            android:layout_alignRight="@+id/s_pass"
            android:layout_alignStart="@+id/s_pass"
            android:layout_below="@+id/s_pass"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/s_male"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/s_pass"
                android:layout_alignStart="@+id/s_pass"
                android:layout_marginTop="13dp"
                android:text="MALE"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="270dp" />


            <RadioButton
                android:id="@+id/s_female"
                android:layout_width="103dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/s_rg"
                android:layout_alignRight="@+id/s_rg"
                android:layout_below="@+id/s_pass"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="13dp"
                android:text="FEMALE"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                tools:layout_editor_absoluteX="149dp"
                tools:layout_editor_absoluteY="270dp" />
        </RadioGroup>

        <Button
            android:id="@+id/s_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_rg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:alpha="0.45"
            android:background="	#E6E6FA"
            android:text="SIGN UP"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="332dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
